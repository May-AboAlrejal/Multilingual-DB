<p id="notice"><%= notice %></p>

<h1><%= I18n.t '.products.index.title' %></h1>

<div class="table-responsive">
  <table  class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col"><%= I18n.t '.products.show.title' %></th>
        <th scope="col"><%= I18n.t '.products.show.description' %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= link_to  "#{I18n.t '.products.show.show'}", product %></td>
          <td><%= link_to "#{I18n.t '.products.show.edit'}", edit_product_path(product) %></td>
          <td><%= link_to "#{I18n.t '.products.show.destroy'}", product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to "#{I18n.t '.products.show.new_product'}", new_product_path %>
